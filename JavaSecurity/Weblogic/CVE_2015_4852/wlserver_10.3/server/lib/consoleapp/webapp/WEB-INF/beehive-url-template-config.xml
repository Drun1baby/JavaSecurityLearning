<?xml version="1.0" encoding="UTF-8"?>
<url-template-config xmlns="http://beehive.apache.org/netui/2004/server/url-template-config">
  <!-- URL templates -->

  <url-template>
    <name>default</name>
    <value>{url:scheme}://{url:domain}:{url:port}/{url:path}?{url:queryString}</value>
  </url-template>

  <url-template>
    <name>default-complete</name>
    <value>{url:scheme}://{url:domain}:{url:port}/{url:prefix}/{url:path}?{url:queryString}</value>
  </url-template>
  <url-template>
    <name>portlet-default</name>
    <value>http://{url:domain}:{url:port}/{url:path}?{url:queryString}</value>
  </url-template>
  <url-template>
    <name>portlet-action</name>
    <value>http://{url:domain}:{url:port}/{url:path}?{url:queryString}</value>
  </url-template>
  <url-template>
    <name>portlet-secure-action</name>
    <value>https://{url:domain}:{url:securePort}/{url:path}?{url:queryString}</value>
  </url-template>
  <url-template>
    <name>portlet-resource</name>
    <value>http://{url:domain}:{url:port}/{url:path}?{url:queryString}</value>
  </url-template>
  <url-template>
    <name>portlet-secure-resource</name>
    <value>https://{url:domain}:{url:securePort}/{url:path}?{url:queryString}</value>
  </url-template>

  <url-template-ref-group>
    <name>jpf-url-templates</name>
    <url-template-ref>
      <key>action</key>
      <template-name>portlet-action</template-name>
    </url-template-ref>
    <url-template-ref>
      <key>secure-action</key>
      <template-name>portlet-secure-action</template-name>
    </url-template-ref>
    <url-template-ref>
      <key>resource</key>
      <template-name>portlet-resource</template-name>
    </url-template-ref>
    <url-template-ref>
      <key>secure-resource</key>
      <template-name>portlet-secure-resource</template-name>
    </url-template-ref>
  </url-template-ref-group>

  <url-template-ref-group>
    <name>java-portlet-url-templates</name>
    <url-template-ref>
      <key>action</key>
      <template-name>portlet-default</template-name>
    </url-template-ref>
    <url-template-ref>
      <key>secure-action</key>
      <template-name>portlet-secure-action</template-name>
    </url-template-ref>
    <url-template-ref>
      <key>resource</key>
      <template-name>portlet-resource</template-name>
    </url-template-ref>
    <url-template-ref>
      <key>secure-resource</key>
      <template-name>portlet-secure-resource</template-name>
    </url-template-ref>
  </url-template-ref-group>

</url-template-config>
